{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "us-west-2"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "vpc_filter": {
        "filters": {
          "tag:Class": "ucop-ami-builder",
          "isDefault": "false"
        }
      },
      "subnet_filter": {
        "filters": {
          "tag:Class": "ucop-ami-builder"
        },
        "random": true
      },

      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "ucop-ami-builder-rhel7-{{timestamp}}",
      "source_ami_filter": {
        "owners": ["309956199498"],
        "most_recent": true,
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL-7.6*Hourly2-GP2",
          "root-device-type": "ebs"
        }
      }
    }
  ],
  "provisioners": [
    {
      "execute_command": "sudo -E sh -eux '{{.Path}}'",
      "scripts": [
        "./rhel7-addons"
      ],
      "type": "shell"
    }
  ]
}
